{{# each products }}    <!--loop through all the products with an outer each loop-->
  <div class="row">
  {{# each this }}      <!--inner each loop will loop through and create columns for the individual product in each row-->
      <div class="col-sm-6 col-md-4">     <!--loop through to create columns the individual product in each row-->
      <div class="thumbnail">
      <img src="{{ this.imagePath }}" alt="..." class="img-responsive">   <!--this keyword is referring to the individual object-->
                                            
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p class="description">{{ this.description }}</p>
        <div class="clearfix">
          <div class="price pull-left">${{ this.price }}</div>
          <a href="/add-to-cart/{{ this._id }}" class="btn btn-success pull-right" role="button">Add to Shopping Cart</a>
        </div>
      </div>
    </div> 
    </div>        
  {{/ each}}
  </div> 
{{/ each}} <!--close block statement -->

